<% provide(:title, 'Add Book to "To-Read" List') %>
<h1>Add Book to "To-Read" List</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :genre %>
      <%= f.text_field :genre %>

      <%= f.hidden_field :source, :value => "toreads" %>

      <%= f.submit "Add", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>